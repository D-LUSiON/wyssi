<div class="file_browser-container">
    <aside>
        <ul class="folders_tree">
            <li data-dir="/">
                <div class="folder_title current">/</div>
            </li>
        </ul>
    </aside>
    <section>
        <header>
            <div class="file_browser-upload_container">
                <div class="button">
                    Upload
                    <input type="file" multiple class="file_upload-trigger"/>
                </div>
            </div>
            <div class="file_browser-path">
                <span class="path_element">/</span>
            </div>
        </header>
        <div class="file_browser-progress">
            <div class="progress" style="width: 0%;">
                <div class="progress-info"></div>
            </div>
        </div>
        <main>
            <div class="file_browser-file_container list"></div>
        </main>
    </section>
</div>